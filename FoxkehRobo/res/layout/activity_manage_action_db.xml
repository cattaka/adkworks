<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Output file name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

<EditText
    android:id="@+id/filenameOutEdit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/textView1"
    android:layout_toLeftOf="@+id/selectOutButton"
    android:ems="10"
    android:singleLine="true" />

<Button
    android:id="@+id/selectOutButton"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/textView1"
    android:text="..." />

<Button
    android:id="@+id/saveButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/selectOutButton"
    android:text="Save" />

<EditText
    android:id="@+id/filenameInEdit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/textView2"
    android:layout_toLeftOf="@+id/selectInButton"
    android:ems="10"
    android:singleLine="true" />

<Button
    android:id="@+id/selectInButton"
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/filenameInEdit"
    android:layout_toRightOf="@+id/filenameOutEdit"
    android:text="..." />
<Button
    android:id="@+id/loadButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/selectInButton"
    android:text="Load" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/saveButton"
    android:layout_marginTop="30dp"
    android:text="Input file name"
    android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>